# TechScout Configuration
# Copy to .env and fill in your values

# Model Provider (bedrock, anthropic, ollama, openai)
MODEL_PROVIDER=bedrock

# AWS Configuration (for Bedrock)
AWS_PROFILE=default
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
BEDROCK_MODEL_ID=us.amazon.nova-pro-v1:0

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_key_here

# Ollama Configuration (for local models)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3

# TechScout Settings
TECHSCOUT_DATA_DIR=tech_evaluations
DEFAULT_EVALUATOR=your_name_here

# External API Keys (Optional - for enhanced research)
GITHUB_API_TOKEN=your_github_token_here
REDDIT_API_KEY=your_reddit_api_key_here